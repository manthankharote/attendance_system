<%- include('partials/_header') %>
<%- include('partials/_nav', { user: user }) %>
<style>
    #video-container {
        position: relative; width: 100%; max-width: 500px;
        margin: 20px auto; border: 2px solid #eee; background-color: #000;
        min-height: 300px; display: flex; align-items: center; justify-content: center;
    }
    #video { width: 100%; height: auto; display: block; }
    
    /* Success Message Styles */
    #success-message {
        display: none; /* Hidden by default */
        text-align: center;
        padding: 20px;
    }
    .checkmark {
        font-size: 80px;
        color: #28a745;
        display: block;
        margin-bottom: 10px;
    }
    .success-text {
        font-size: 1.5rem;
        font-weight: bold;
        color: #28a745;
    }
    .redirect-text {
        margin-top: 10px;
        color: #666;
        font-size: 0.9rem;
    }
</style>

<main class="container">
    <div class="card">
        <h2>Scan Session QR Code</h2>
        <p id="instruction-text">Point your camera at the QR code displayed by your teacher.</p>

        <div id="video-container">
            <video id="video" playsinline></video>
            
            <div id="success-message">
                <span class="checkmark">âœ…</span>
                <div class="success-text">Attendance Marked!</div>
                <div class="redirect-text">Redirecting to dashboard...</div>
            </div>
        </div>
        
        <p id="status-message" style="text-align: center;">Starting camera...</p>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const socket = io();
        const studentId = "<%= user._id %>";
        const studentName = "<%= user.name %>";

        const video = document.getElementById('video');
        const canvasElement = document.createElement('canvas');
        const canvas = canvasElement.getContext('2d', { willReadFrequently: true });
        const statusMessage = document.getElementById('status-message');
        const successMessage = document.getElementById('success-message');
        const instructionText = document.getElementById('instruction-text');
        
        let scanActive = true;

        function tick() {
            if (!scanActive) return;
            
            if (video.readyState === video.HAVE_ENOUGH_DATA) {
                canvasElement.height = video.videoHeight;
                canvasElement.width = video.videoWidth;
                canvas.drawImage(video, 0, 0, canvasElement.width, canvasElement.height);
                const imageData = canvas.getImageData(0, 0, canvasElement.width, canvasElement.height);
                const code = jsQR(imageData.data, imageData.width, imageData.height);

                if (code) {
                    // --- SCAN SUCCESSFUL LOGIC ---
                    scanActive = false; 
                    const sessionIdentifier = code.data;

                    // 1. Hide Video and Status Text
                    video.style.display = 'none';
                    statusMessage.style.display = 'none';
                    instructionText.style.display = 'none';

                    // 2. Show Success Message
                    successMessage.style.display = 'block';

                    // 3. Emit Event to Server
                    socket.emit('studentScan', {
                        sessionIdentifier: sessionIdentifier,
                        studentId: studentId,
                        studentName: studentName
                    });

                    // 4. Redirect after 3 seconds
                    setTimeout(() => {
                        window.location.href = '/student/dashboard';
                    }, 3000);
                }
            }
            
            if (scanActive) {
                requestAnimationFrame(tick);
            }
        }

        navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
            .then(function(stream) {
                video.srcObject = stream;
                video.setAttribute("playsinline", true);
                video.play();
                statusMessage.textContent = 'Looking for QR code...';
                requestAnimationFrame(tick);
            })
            .catch(function(err) {
                console.error("Camera Error:", err);
                statusMessage.textContent = "Error: Could not access camera.";
            });
    });
</script>
</body>
</html>