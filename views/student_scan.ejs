<%- include('partials/_header') %>
<%- include('partials/_nav', { user: user }) %>
<style>
    #video-container {
        position: relative; width: 100%; max-width: 500px;
        margin: 20px auto 10px auto; border: 2px solid #eee; background-color: #000;
        min-height: 300px; display: flex; align-items: center; justify-content: center;
    }
    #video { width: 100%; height: auto; display: block; }
    
    #success-message {
        display: none;
        text-align: center;
        padding: 20px;
    }
    .checkmark { font-size: 80px; color: #28a745; display: block; margin-bottom: 10px; }
    .success-text { font-size: 1.5rem; font-weight: bold; color: #28a745; }
    .redirect-text { margin-top: 10px; color: #666; font-size: 0.9rem; }

    /* ðŸ‘‡ Styles for the Zoom Slider */
    #zoom-container {
        width: 100%; max-width: 500px; margin: 0 auto 20px auto;
        display: none; /* Hidden by default until we detect zoom support */
        align-items: center; gap: 10px;
    }
    #zoom-slider { flex-grow: 1; cursor: pointer; }
    .zoom-label { font-weight: bold; color: #555; }
</style>

<main class="container">
    <div class="card">
        <h2>Scan Session QR Code</h2>
        <p id="instruction-text">Point your camera at the QR code displayed by your teacher.</p>

        <div id="video-container">
            <video id="video" playsinline></video>
            <div id="success-message">
                <span class="checkmark">âœ…</span>
                <div class="success-text">Attendance Marked!</div>
                <div class="redirect-text">Redirecting to dashboard...</div>
            </div>
        </div>

        <div id="zoom-container">
            <span class="zoom-label">âˆ’</span>
            <input type="range" id="zoom-slider" min="1" max="5" step="0.1" value="1">
            <span class="zoom-label">+</span>
        </div>
        
        <p id="status-message" style="text-align: center;">Starting camera...</p>
    </div>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const socket = io();
        const studentId = "<%= user._id %>";
        const studentName = "<%= user.name %>";
        const studentSchoolId = "<%= user.schoolId %>";

        const video = document.getElementById('video');
        const canvasElement = document.createElement('canvas');
        const canvas = canvasElement.getContext('2d', { willReadFrequently: true });
        const statusMessage = document.getElementById('status-message');
        const successMessage = document.getElementById('success-message');
        const instructionText = document.getElementById('instruction-text');
        
        // Zoom Elements
        const zoomContainer = document.getElementById('zoom-container');
        const zoomSlider = document.getElementById('zoom-slider');
        
        let scanActive = true;

        function tick() {
            if (!scanActive) return;
            
            if (video.readyState === video.HAVE_ENOUGH_DATA) {
                canvasElement.height = video.videoHeight;
                canvasElement.width = video.videoWidth;
                canvas.drawImage(video, 0, 0, canvasElement.width, canvasElement.height);
                const imageData = canvas.getImageData(0, 0, canvasElement.width, canvasElement.height);
                const code = jsQR(imageData.data, imageData.width, imageData.height);

                if (code) {
                    scanActive = false; 
                    const sessionIdentifier = code.data;

                    video.style.display = 'none';
                    zoomContainer.style.display = 'none'; // Hide zoom on success
                    statusMessage.style.display = 'none';
                    instructionText.style.display = 'none';
                    successMessage.style.display = 'block';

                    socket.emit('studentScan', {
                        sessionIdentifier: sessionIdentifier,
                        studentId: studentId,
                        studentName: studentName,
                        studentSchoolId: studentSchoolId
                    });

                    setTimeout(() => {
                        window.location.href = '/student/dashboard';
                    }, 3000);
                }
            }
            if (scanActive) {
                requestAnimationFrame(tick);
            }
        }

        navigator.mediaDevices.getUserMedia({ video: { facingMode: "environment" } })
            .then(function(stream) {
                video.srcObject = stream;
                video.setAttribute("playsinline", true);
                video.play();
                statusMessage.textContent = 'Looking for QR code...';
                
                // ðŸ‘‡ ZOOM LOGIC STARTS HERE ðŸ‘‡
                const track = stream.getVideoTracks()[0];
                const capabilities = track.getCapabilities();

                // Check if the camera supports Zoom
                if (capabilities.zoom) {
                    zoomContainer.style.display = 'flex'; // Show the slider
                    zoomSlider.min = capabilities.zoom.min;
                    zoomSlider.max = capabilities.zoom.max;
                    zoomSlider.step = capabilities.zoom.step;
                    zoomSlider.value = 1; // Start at 1x zoom

                    zoomSlider.oninput = function() {
                        track.applyConstraints({
                            advanced: [{ zoom: parseFloat(this.value) }]
                        });
                    }
                } else {
                    console.log('Zoom not supported on this device');
                }
                // ðŸ‘† ZOOM LOGIC ENDS HERE ðŸ‘†

                requestAnimationFrame(tick);
            })
            .catch(function(err) {
                console.error("Camera Error:", err);
                statusMessage.textContent = "Error: Could not access camera.";
            });
    });
</script>
</body>
</html>